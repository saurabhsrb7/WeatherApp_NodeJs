                        </div> 
                    </div>

                </div>
            </div>
        </div>

    </div>
    <!-- footer -->

   {{>footer}}

    <script src="js/main.js"></script>

    <script>
        
          const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "SUN";
        weekday[1] = "MON";
        weekday[2] = "TUE";
        weekday[3] = "WED";
        weekday[4] = "Thursday";
        weekday[5] = "FRI";
        weekday[6] = "SAT";

        let currentTime = new Date();
        let days = weekday[currentTime.getDay()];
        let day = document.getElementById('day')

        day.innerText = days; 
      };


      getCurrentDay();
    

    </script>
</body>

</html>